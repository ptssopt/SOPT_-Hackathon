    <TextView
        android:text="리워드"
        android:textColor="#ffffff" android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reward" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="208dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="274dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="446dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:text="미션"
        android:textColor="#ffffff" android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_mission" android:layout_marginTop="234dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="439dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="274dp"/>
    <TextView
        android:text="레고 사주기"
        android:textColor="#ffffff" android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reward_detail"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="208dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="328dp"
        android:layout_marginBottom="130dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="315dp"/>
    <TextView
        android:text="일주일간 일기 꼬박꼬박 쓰기"
        android:textColor="#ffffff" android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_mission_detail" android:layout_marginTop="234dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="245dp"
        android:layout_marginStart="328dp" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView

        android:layout_width="300dp"
        android:layout_height="170dp" app:srcCompat="@drawable/lego_princess"
        android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="314dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="288dp" android:layout_marginBottom="174dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>