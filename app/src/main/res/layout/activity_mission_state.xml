<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7358a5"
    tools:context=".Activity.MissionStateActivity">
    <LinearLayout
        android:background="#fcd108"
        android:layout_width="166dp"
        android:layout_height="match_parent">
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_mission_state_missionimage"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="47dp"
        android:layout_marginRight="435dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/lego_princess"
        />

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="280dp"
        android:layout_gravity="right"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="33dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.04"
            android:text="미션명"/>
        <TextView
            android:id="@+id/tv_mission_state_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="일주일간 일기 꼬박꼬박 쓰기!"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.04"
            android:text="리워드"/>
        <TextView
            android:id="@+id/tv_mission_state_contents_rewords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.04"
            android:text="레고 사주기"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.04"
            android:text="미션 달성률"/>

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star1"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/img_star_unactive"
                />
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star2"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/img_star_unactive"
                />
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star3"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/img_star_unactive"
                />
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star4"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/img_star_unactive"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star5"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/img_star_unactive"
                />
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star6"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/img_star_unactive"
                />
            <ImageView
                android:id="@+id/iv_mission_state_missionimage_star7"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/img_star_unactive"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_mission_state_missionimage_mailbox"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="right"
        android:layout_marginTop="263dp"
        android:layout_marginLeft="650dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/btn_mailbox"
        />
</FrameLayout>